<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Reply-Mapper">

	<select id="selectReplyList" resultType="reply">
		select *
		from free_reply
		where fno=#{fno}
		order by regdate asc
	</select>
	
	<select id="countReply" resultType="int">
		select count(fno) 
		from free_reply
		where fno=#{fno}
	</select>
	<select id="selectReplySeqNextValue" resultType="int" >
		select freeboardreply_seq.nextval
		from dual		
	</select>
	<insert id="insertReply" parameterType="reply">
		insert into free_reply(reply_number,fno,reply_content,user_id)
		values(#{reply_number},#{fno},#{reply_content},#{user_id})
	</insert>
	
	<update id="updateReply" parameterType="reply">
		update free_reply 
		set 
		reply_content=#{reply_content},
		update_date=sysdate
		where reply_numbere=#{reply_number}		
	</update>
	
	<delete id="deleteReply" parameterType="int">
		delete from free_reply
		where reply_number=#{reply_number}		
	</delete>	
</mapper>





